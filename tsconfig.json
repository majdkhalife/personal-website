{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react-jsx",
    "noEmit": true,
    // allow import .js in TS files (for vite.config.js)
    "allowJs": true
  },
  "include": [
    "src",
    "vite.config.ts",
    "vite.config.js"
  ],
  "exclude": ["node_modules", "dist"]
}
